

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            direction: ltr; /* Left-to-right text direction */
            text-align: left;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0; /* ✅ Sidebar on the left */
            background: #343a40;
            padding-top: 60px;
        }

            .sidebar a {
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            margin-left: 250px; /* ✅ Ensuring content is not hidden behind the sidebar */
            padding: 20px;
        }

        .navbar {
            background: #007bff;
            color: white;
            height: 60px;
            display: flex;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
        }

        .profile-section {
            margin-left: auto; /* ✅ Aligns profile to the right */
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>

    <!-- ✅ Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <span class="navbar-brand">Employee Dashboard</span>


            <!-- ✅ Profile Dropdown -->
            <div class="dropdown profile-section">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="me-2">Welcome, John</span>
                    <img src="https://via.placeholder.com/40" alt="Profile Picture" class="profile-img">
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" href="#">Edit Profile</a></li>
                    <li><a class="dropdown-item text-danger" href="#">Logout</a></li>
                </ul>
            </div>

        </div>
    </nav>

    <!-- ✅ Sidebar (Now on the left) -->
    <div class="sidebar">
        <a asp-action="Index" asp-controller="EmployeeLayout"> Home</a>
        <a asp-action="CreateLeave" asp-controller="EmployeeLayout"> Leave Requests</a>
    </div>

    <!-- ✅ Page Content -->
    <div class="content">
        <h2>Welcome to the Employee Dashboard</h2>
        <p>You can submit leave requests and track their status here.</p>
        @RenderBody()
    </div>

</body>
</html>


